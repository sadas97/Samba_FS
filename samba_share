	    echo "Must enter 1 or 2"
	fi

	read -p ">" ConfigChoice

	if [ "${ConfigChoice}" == 1 ] || [ "${ConfigChoice}" == 2 ]; then
	    ConfigReset=0
	fi
    done

    while [ -z "${}" ]; do
	    if [ -z "${}" ]; then
		    =1
	    elif [ "${}" ]; then
		    echo " must be entered"
	    fi
	    read -p "Enter :" smthg
	done

else
    echo "Script must be run as root"
fi

