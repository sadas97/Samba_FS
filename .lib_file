#!/bin/bash


cycle () {
    Reset=1
    while [ "${Reset}" == 1 ]; do
	if [ -z "${Message}" ]; then
	    Message=1
	elif [ "${Message}" ]; then
	    echo "Must enter 1 or 2"
	fi

	read -p ">" Choice

	if [ "${Choice}" == 1 ] || [ "${Choice}" == 2 ]; then
	    Reset=0
	fi
    done
    printf "${Choice}"
}