#!/bin/bash


Choice_cycle () {
    Reset=1
    while [ "${Reset}" == 1 ]; do
	read -p ">" Choice
	if [ "${Choice}" != "${1}" ] || [ "${Choice}" != "${2}" ]; then
	    return 10
	fi
    done

}

Input_cycle () {
    while [ -z "${Input}" ]; do
	read -p "Enter ${1}:" Input
	if [ -z "${Input}" ]; then
	    echo "${1} must not be empty"
	fi
    done
    return "${Input}"
}