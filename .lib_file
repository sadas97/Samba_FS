#!/bin/bash

NewfolderReset=1
    while [ "${NewfolderReset}" == 1 ]; do
	if [ -z "${NewfolderMessage}" ]; then
	    NewfolderMessage=1
	elif [ "${NewfolderMessage}" ]; then
	    echo "Must enter 1 or 2"
	fi

	read -p ">" NewfolderChoice

	if [ "${NewfolderChoice}" == 1 ] || [ "${NewfolderChoice}" == 2 ]; then
	    NewfolderReset=0
	  fi
  done
